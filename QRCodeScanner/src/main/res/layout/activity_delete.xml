<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFE1E4"

    tools:context="com.example.qrscanner.qira.Delete">
    <EditText
        android:id="@+id/edit_text"
        android:inputType="number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:hint="Enter ID then Press Delete"
        />
    <Button
        android:id="@+id/btn_dlt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Delete"
        android:layout_marginLeft="275dp"
        android:background="@drawable/roundedbutton"
        android:fontFamily="@font/press_start_2p"
        android:textColor="#B3E8B3"
        android:textSize="10sp"
        />
    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:textColor="#3D783F"
        android:id="@+id/display_list"
        ></ListView>


</RelativeLayout>
